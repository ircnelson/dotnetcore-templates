{
  "$schema": "http://json.schemastore.org/template",
  "author": "Nelson Junior",
  "classifications": ["Web", "WebApi"],
  "groupIdentity": "NJ.Web.WebApi",
  "identity": "NJ.Web.WebApi.CSharp.3.1",
  "name": "NJ Web Api",
  "shortName": "njwebapi",
  "sourceName": "NJ.Web",
  "preferNameDirectory": true,
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(ExcludeDocker)",
          "exclude": [".dockerignore", "Dockerfile-Api"]
        }
      ]
    }
  ],
  "symbols": {
    "ExcludeDocker": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Whether to exclude Docker in the generated template."
    }
  }
}
